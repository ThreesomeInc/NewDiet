/* pages/question-sex/question-sex.wxss */
.container {
  color: #3d4966;
  background-color: rgba(0, 0, 0, 0.05);
  padding-top:20rpx;
}
/* Part 1 logo*/
.big-logo {
  width: 400rpx;
}
.big-logo-view {
  margin-bottom: 60rpx;
  margin-top: 20rpx;
}
/* Part 2 question*/
.question-header-view {
  margin: 15rpx;
  width:70%;
  text-align: center;
  border-top:1px solid #3d4966;
  border-bottom:1px solid #3d4966;
  padding:20rpx;
}
.question-header {
  font-style: bold;
  font-size: 60rpx;
  text-align: center;  
}
.data-picker-view {
    margin: 5rpx auto;
    width:80%;
    text-align: center;
    vertical-align: middle;
}
picker-view {
  height: 240rpx;
  text-align: center;
  vertical-align: middle;
}
picker-view-column {
  line-height: 70rpx;
}

/* Part 3 button*/
.nextButtonView {
  margin: 90rpx;
  color: #3d4966;
  text-align: center;
}
.nextQuestionButton {
  color: #3d4966;
  border: 1rpx solid #3d4966;
  font-size: 40rpx;
  border-radius: 10rpx;
}
.nextQuestionButton:hover{
  border: 5rpx solid #3d4966;
}

.intro {
  margin: 30px;
  text-align: center;
}