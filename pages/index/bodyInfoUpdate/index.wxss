

/* menu */
.menu-item {
    position: relative;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #fff;
    color: #20492e;
    font-size: 35rpx;
    margin-bottom: 15rpx;
    box-sizing:border-box;
    padding-left: 50rpx;
}


.right-content {
    position:absolute;
    top: 50%;
    right: 50rpx;
    transform: translateY(-50%);
    color:#9f9f9f;
}
.title-icon {
  width: 50rpx;
  height: 50rpx;
  position:absolute;
  top: 50%;
  left: 50rpx;
  transform: translateY(-50%);
}

.description {
  width: 80rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipse;
}

.next-icon {
    position:absolute;
    top: 50%;
    right: 35rpx;
    transform: translateY(-50%);
    width: 45rpx;
    height: 45rpx;
}
