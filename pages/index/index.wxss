/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:-120rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.diet-logo {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: #ffffff;
}

.userinfo-nickname {
  color: #20492e;
}

.questionButtonView {
  margin-top: 70rpx;
  
}
.questionButton {
   border-radius: 40rpx;
  color: #ffffff;
  background-color: #4cb16f;
}
.header-backgroup {
  width: 100%;
  height: 150rpx;
  background-color: #4cb16f;
  margin: 0;
}

.slogon {
  padding-top: 60rpx;
  text-align: center;
  color: #20492e;
  line-height: 2rem;
  font-family: 'Wawati SC','STZhongsong';
  font-size: 50rpx;
}
#slogon1 {
  font-size: 52rpx;
  font-style: bold;
  padding-bottom: 5rpx;
  border-top:1px solid #20492e;
  border-bottom:1px solid #20492e;
}

#slogon2 {
  line-height: 2rem;
}

/* 4 grid tab */
.gridTab {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: stretch;
  margin: 10rpx 20rpx;
  margin-top: 30rpx;
  height: 220rpx;
  text-align: center;
  padding-top: 30rpx;
}
.tab-box {
  border-bottom: 0;
  color: #20492e;
  margin: 0rpx 10rpx 10rpx 10rpx;
  width: 25%;
  
}
.mini-tab-header {
  background-color: #4cb16f;
  color: white;
  font-size: 35rpx;
  padding:10rpx;
  height: 100rpx;
}
.mini-tab-info {
  vertical-align: center;
  border: 3rpx solid #4cb16f;
  font-size: 33rpx;
  padding: 8rpx;
  overflow-wrap:break-word;
  word-break: break-all;
  height: 100rpx;
}

/* menu */
.menu-list {
  width: 100%;
  margin-top: 50rpx;
}
.menu-item {
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    color: #20492e;
    font-size: 35rpx;
    margin-bottom: 20rpx;
    box-sizing:border-box;
    padding-left: 50rpx;
}

.menu-item .menu-item-title {
    overflow:hidden;
    text-align: left;
    padding: 0 80rpx;
    box-sizing: border-box;
}

.next-icon {
    position:absolute;
    top: 50%;
    right: 50rpx;
    transform: translateY(-50%);
    width: 45rpx;
    height: 45rpx;
}
.title-icon {
  width: 60rpx;
  height: 60rpx;
  position:absolute;
  top: 50%;
  left: 50rpx;
  transform: translateY(-50%);
}