/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:-120rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #3d4966;
}

.questionButtonView {
  margin-top: 70rpx;
  
}
.questionButton {
  border: 3px solid #3d4966;
  border-radius: 40rpx;
  color: #3d4966;
}
.header-backgroup {
  width: 100%;
  height: 150rpx;
  background-color: #3d4966;
  margin: 0;
}

.slogon {
  padding-top: 60rpx;
  text-align: center;
  color: #3d4966;
  line-height: 2rem;
  font-family: 'Wawati SC','STZhongsong';
  font-size: 50rpx;
}
#slogon1 {
  font-size: 52rpx;
  font-style: bold;
  padding-bottom: 5rpx;
  border-top:1px solid #3d4966;
  border-bottom:1px solid #3d4966;
}

#slogon2 {
  line-height: 2rem;
}

.gridTab {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: stretch;
  margin: 10rpx 20rpx;
  margin-top: 30rpx;
  height: 220rpx;
  text-align: center;
  padding-top: 30rpx;
}
.tab-box {
  border: 3rpx solid #3d4966;
  color: #3d4966;
  margin: 0 10rpx;
  width: 25%;
  
}
.tab-header {
  background-color: #3d4966;
  color: white;
  padding:8rpx;
  height: 120rpx;
}
.tab-info {
  padding-top: 20rpx;
}