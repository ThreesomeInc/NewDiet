<!--index.wxml-->
<view class="main-container">
  <view class="header-backgroup"></view>
  <view class="userinfo-before" wx:if="{{!hasUserInfo && canIUse}}">

      <image class="diet-logo" src="../../images/Diet_logo.png" background-size="cover"></image>
      <button open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 轻点授权，\n看到大不同 </button>

      </view>
      <block wx:else>

  <block wx:if="{{!hasUserBodyInfo}}">
      <view class="userinfo-before" >
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      </view>
    <view class="slogon1 center dark-green">
      <text>{{slogon1}}</text>
    </view>
    <view class="slogon2 center dark-green">
      <text>{{slogon2}}</text>
    </view>
    <view class="questionButtonView">
      <button bindtap='goToQuestions' class='questionButton'>{{motto}}</button>
    </view>
  </block>

  <block wx:elif="{{hasUserBodyInfo}}">
    <view class="userinfo-after" >
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <view class="gridTab">
        <block wx:for="{{basicInfoSummary}}" wx:key="name">
          <view class="tab-box">
          <view class="mini-tab-header">{{item.name}}</view>
          <view class="mini-tab-info">{{item.value}}</view>
          </view>
        </block>
      </view>
    </view>
    <view class="menu-list dark-green">
        <navigator url="dietStructure/index">
            <view class="menu-item">
            <image class="title-icon" src="../../images/tips_icon.png" />
                <view class="menu-item-title">
                    膳食结构建议
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="bodyInfoUpdate/index">
            <view class="menu-item">
                <image class="title-icon" src="../../images/setting_icon.png" />
                <view class="menu-item-title">
                    更新我的身体资料
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="authentication/authentication">
            <view class="menu-item">
              <image class="title-icon" src="../../images/authentication_icon.png" />
                <view class="menu-item-title">
                    授权设置
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="about/about">
            <view class="menu-item">
            <image class="title-icon" src="../../images/about_icon.png" />
                <view class="menu-item-title">
                    关于肾脏营养师
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
    </view>
  </block>
  </block>
</view>
