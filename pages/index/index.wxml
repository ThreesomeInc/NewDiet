<!--index.wxml-->
<view class="main-container">
  <view class="header-backgroup"></view>
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 授权进入主程序 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <block wx:if="{{!hasUserBodyInfo}}">
    <view class="slogon">
      <text id='slogon1'>{{slogon1}}</text>
    </view>
    <view class="slogon">
      <text id='slogon2'>{{slogon2}}</text>
    </view>
    <view class="questionButtonView">
      <button bindtap='goToQuestions' class='questionButton'>{{motto}}</button>
    </view>
  </block>
  <block wx:elif="{{hasUserBodyInfo}}">
    <!-- <view class="slogon">
      <text id='slogon1'>{{slogon1}}</text>
    </view> -->
    <view class="gridTab">
     <block wx:for="{{headerBodyInfo}}" wx:key="header">
      <view class="tab-box">
        <view class="mini-tab-header">{{item.header}}</view>
        <view class="mini-tab-info">{{item.info}}</view>
      </view>
      </block>
    </view>
    <view class="menu-list">
        <navigator url="dietStructure/index">
            <view class="menu-item">
                <view class="menu-item-title">
                    膳食结构建议
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="bodyInfoUpdate/index">
            <view class="menu-item">
                <view class="menu-item-title">
                    我的身体资料
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="authentication/authentication">
            <view class="menu-item">
                <view class="menu-item-title">
                    授权设置
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="about/about">
            <view class="menu-item">
                <view class="menu-item-title">
                    关于肾脏营养师
                </view>
                <image class="next-icon" src="../../images/rightArrow.png" />
            </view>
        </navigator>
    </view>
  </block>
</view>
