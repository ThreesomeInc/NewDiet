/* pages/threeDayDietReport/threeDayDietReport.wxss */
.body-content {
  margin: 20rpx auto;
  text-align: center;
  padding: 10rpx;
}
.header{
  width: 90%;
  text-align: center;
  color:#20492e;
  font-size: 110%;
  font-weight: bold;
  margin: 50rpx auto;
  margin-bottom: 30rpx;
}
.logTypeInfo{
  padding: 20rpx 10rpx;
  color: #a9a9a9;
  text-align: center;
}

.tab-box {
  margin: 0rpx;
}
.gridTab{
  width: 80%;
  text-align: center;
  margin: 5rpx auto;
}
.mini-tab-header {
  text-align: left;
  margin: 1rpx;
  width: 72%;
  background-color: #f3f3f3;
  color: #20492e;
  font-size: 90%;
}
.mini-tab-info {
  overflow-wrap:break-word;
  word-break: break-all;
  text-align: right;
}

.dieticianAdvice{
  margin: 0 auto;
  text-align: left;
  width: 100%;
  margin-bottom: 50rpx;
}
.advise{
  width: 85%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  text-align: left;
}
.adviseIndex {
  width: 45rpx;
  margin-right: 5rpx;
}
.adviseContent{
  margin-left: 10rpx;
}

.reminder {
  margin: 10rpx auto;
  text-indent: 5rpx;
  width: 85%;
  text-align: left;
}