/* pages/summary/summary.wxss */
.question-container {
  color: #3d4966;
  background-color: white;
  padding-top:30rpx;
  padding-bottom: 5rpx;
  margin: 30rpx 15rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  text-align: center;
  border: 10rpx solid #3d4966;
  border-radius: 30rpx;
} 

.summaryReportButtonView {
    margin-bottom: 40rpx;
    color: white;
    text-align: center;
    width: 90%;
    display: flex;
    flex-direction: row;
}

#goBackMain, #goShare {
    color: white;
    border: 1rpx solid white;
    font-size: 40rpx;
    border-radius: 40rpx;
    background-color: #3d4966;
    width: 70%;
}

.gridTab {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: stretch;
  margin: 15rpx;
  height: 220rpx;
  text-align: center;
}
.tab-box {
  color: #3d4966;
  margin: 0 10rpx;
  width: 25%;

}
.mini-tab-header {
  background-color: #3d4966;
  color: white;
  font-size: 35rpx;
  padding:10rpx;
  height: 100rpx;
}
.mini-tab-info {
  vertical-align: center;
  border: 3rpx solid #3d4966;
  font-size: 33rpx;
  padding: 8rpx;
  overflow-wrap:break-word;
  word-break: break-all;
  height: 100rpx;
}

.report-header {
  font-style: bold;
  font-size: 50rpx;
  margin: 0;
  height: 100rpx;
  background-color: #3d4966;
  color: white;
  text-align: center;
  padding-top:20rpx;
}

/* bar chart related */
.canvas{
  width: 96%;
  margin-top: 50rpx;
  padding: 0;
}
.bar-char {
  width: 100%;
  text-align: center;
  margin: 20rpx auto;
  padding: 20rpx 0;
}

.session-title {
  display:block;
  font-style: bold;
  font-size: 40rpx;
  color: #3d4966;
  width: 60%;
  margin: 10rpx auto;
  padding-bottom: 10rpx;
  padding-top:20rpx;
  border-bottom: 2rpx solid #3d4966;
}

.session-sub-title {
  font-size: 32rpx;
  display:block;
  color: #3d4966;
  margin: 30rpx auto;
  width: 85%;
  text-align: left; 
  line-height: 1.2rem;
}

.slogan {
  display:block;
  width: 90%;
  text-align: center; 
  margin: 30rpx; 
  color: #fe6345;
  font-style: bold;
  font-size: 45rpx;
  font-family: 'Wawati SC','STZhongsong';
  padding: 5rpx 0;
  border-top:1px solid #fe6345;
  border-bottom:1px solid #fe6345;
}
.fixSlogan{
  display:block;
  width: 90%;
  text-align: center; 
  margin: 30rpx; 
  font-size: 32rpx;
  padding-bottom: 50rpx;
}
