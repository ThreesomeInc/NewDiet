/* pages/question/treatmentMethod/treatmentMethod.wxss */
.data-checkbox-view {
    margin: 5rpx auto;
    width:100%;
    text-align: center;
    vertical-align: middle;
    padding-top:30rpx;
    padding-bottom: 60rpx;
}
.checkbox-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.checkbox-group label {
  display:block;
  margin: 5rpx;
  padding: 5rpx 40rpx;
  padding-left: 60rpx;
  width: 60%;
  border: 1px solid black;
  border-radius: 40rpx;
  text-align: left;
}
.checkbox-group .is_checked {
  background-color: #3d4966;
  color: white;
}





