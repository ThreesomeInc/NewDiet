<!--question-sex.wxml-->
<view class="container">
  <view class="big-logo-view">
      <image class="big-logo" mode="widthFix" src="{{logoUrl}}" ></image>
  </view>
  <view class="question-header-view">
    <text class="question-header">{{question}}</text>
  </view> 

<view class="data-picker-view">
  <picker-view indicator-style="height: 40rpx;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}">{{item}}日</view>
    </picker-view-column>
  </picker-view>
</view>

  <view class="nextButtonView">
    <button bindtap='goToNextQuestion' class='nextQuestionButton'>{{nextQuestionText}}</button>
  </view>
</view>
