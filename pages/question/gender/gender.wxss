/* pages/question-sex/question-sex.wxss */
.container {
  color: #3d4966;
  background-color: white;
  padding-top:20rpx;
}
/* Part 1 logo*/
.big-logo {
  width: 400rpx;
}
.big-logo-view {
  margin-bottom: 60rpx;
  margin-top: 20rpx;
}
/* Part 2 question*/
.question-header-view {
  margin: 15rpx;
  width:70%;
  text-align: center;
  border-top:1px solid #3d4966;
  border-bottom:1px solid #3d4966;
  padding:20rpx;
}
.question-header {
  font-style: bold;
  font-size: 60rpx;
  text-align: center;  
}
.parameter-wrap {
  margin-top: 90rpx;
  margin-bottom: 20rpx;
}
.parameter-info {
  padding: 50rpx;
  margin: 40rpx;
  border: 2rpx solid #3d4966;
  border-radius: 50%;
  font-style: bold;
}
.parameter-info:hover {
  border: 5rpx solid #3d4966;
}
.checked_parameter {
  font-style: bold;
  background: #3d4966;
  color: #f2f3fd;
}
/* Part 3 button*/
.nextButtonView {
  margin: 90rpx;
  color: #3d4966;
  text-align: center;
}
.nextQuestionButton {
  color: #3d4966;
  border: 1rpx solid #3d4966;
  font-size: 40rpx;
  border-radius: 10rpx;
}
.nextQuestionButton:hover{
  border: 5rpx solid #3d4966;
}

