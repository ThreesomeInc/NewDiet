.row-container{
    display: flex;
    flex-direction:row;
    width:100%;
    height:120rpx;
    border: 2rpx solid #eeeeee;
    padding:2rpx 10rpx;
    margin:4rpx auto;
}
.con-trimg{
    width:70rpx;
    height:70rpx;
    margin:10rpx 10rpx;
}
.con-info{
    margin:8rpx 10rpx;
    overflow: hidden;
    font-size: 34rpx;
    font-family: "微软雅黑";
    color:#606060;
}
.coin-info{ 
    font-size: 28rpx;
}
.con-right {
  position:absolute;
  right: 60rpx;
  font-size: 28rpx;
  text-align: right;
  color: #a9a9a9;
}
.mealList {
  width: 85%;
  margin: 0rpx auto;
  padding: 10rpx;
  padding-top: 30rpx;
}
.tab-header {
  background-color: #4cb16f;
  color:white;
  height: 180rpx;
  padding:10rpx;
  margin:0;
  width: 100%;
  text-align: center;
  font-weight: bold;
  padding-top: 20rpx;
}

#refreshRecommendation {
  border: 2rpx solid #ffffff;
  color:#ffffff;
  margin:1rpx auto;
  padding: 1rpx;
  border-radius: 50rpx;
  font-size: 35rpx;
  line-height: 54rpx;
  width: 60%;
  background-color: #4cb16f;
}

.subHeader{
  padding: 0;
  margin: 3rpx;
}
.headerText {
  font-size: 40rpx;
  border: 0rpx;
}