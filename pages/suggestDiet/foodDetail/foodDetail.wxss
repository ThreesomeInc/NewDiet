@import '../../../vendor/weui/weui.wxss';

/* pages/suggestDiet/meal/meal.wxss */
.top_block {
  width: 85%;
  background-color: #fe6345;
  color: #ffffff;
  border-radius: 40rpx;
  margin: 30rpx 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
}

.food_image{
    width:150rpx;
    height:150rpx;
    margin:auto 20rpx;
}

.right_block{
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.title_row, .lable_row {
 padding: 10rpx 0;
   display: flex;
  flex-direction: row;
    overflow-wrap:break-word;
    flex-wrap: wrap;
}

.food_name {
  font-size: 32rpx;
}
.food_label {
  background-color: #ffffff;
  color: #fe6345;
  border-radius: 30rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 2rpx 8rpx;
  margin: 8rpx;
}

.preference-icon {
    position:absolute;
    top: 50rpx;
    right: 60rpx;
    width: 60rpx;
    height: 60rpx;
}

.info_block {
  background-color: #ffffff;
  width: 100%;
  padding: 20rpx;
  margin: 20rpx auto;
  color: #606060;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.advise {
  margin: 10rpx auto;
  width: 82%;
  font-size: 36rpx;
  line-height: 1.4rem;
  text-align: left;
}
.title{
  color: #929292;
}

.content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
    background-color: #ffffff;
    margin: 0 auto;
    padding: 10rpx 30rpx 40rpx 30rpx;
    text-align: center;
}


.templateContainer {
    width: 27%;
    background-color: white;
    margin: 8rpx 15rpx;
    border-radius: 10rpx;
}


.category-container {
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 34rpx;
}
.composite_name{
    padding: 8rpx;
    color: #606060;
 
}
.composite_value{
    padding: 6rpx;
    font-size: 32rpx;
    color: #606060;
    border-radius: 30rpx;
    border: 1rpx solid #606060;
    height: 44rpx;
}

