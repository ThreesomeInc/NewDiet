
.tab-header {
  background-color: #4cb16f;
  color:white;
  height: 100rpx;
  padding:0;
  margin:0;
  width: 100%;
  text-align: center;
  padding-top: 20rpx;
}

.headerText{
  border: 2rpx solid white;
  padding: 2rpx;
  margin:0 auto;
  border-radius: 50rpx;
  font-size: 36rpx;
  width: 60%;
  vertical-align: center;
}

.arrow-img {
  width: 50rpx;
  height: 50rpx;
  position:absolute;
  top: 50%;
  transform: translateY(-50%);
}

.arrow-img-header {
  width: 50rpx;
  height: 50rpx;
  position:absolute;
  margin-left: 10rpx;
}

.box1{
display: flex;
flex-wrap: wrap;
margin: 0 auto;
}

.box1>view{
text-align: center;
font-size: 34rpx;
margin-top: 15rpx;
}

.dateOn{
border-radius: 50%;
background-color: #fe6345;
color: #ffffff;
}
.ball {
box-shadow:2px 2px 10px #a9a9a9;
border-radius: 20px;
position: absolute;
}
.font-color{
color:#a9a9a9;
}

.meal-type-img {
  width: 50rpx;
  height: 50rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
}

.mealtime-header {
  margin-left: 20rpx;
}

.heading-block{
  width: 86%;
  padding: 15rpx 20rpx 8rpx 30rpx;
  font-size: 105%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
}
.flex-column {
  display:flex;
  flex-direction: column;
  margin: 10rpx auto;
}
.food-list{
  width: 78%;
  line-height: 150%;
  font-size: 90%;
  text-align: left;
  margin: 0 auto;
  color: #a9a9a9;
}
.control{
  padding: 2rpx;
  color: #a9a9a9;
  float:right;
}

.bottom-control {
  text-align: left;
  margin: 10rpx auto;
  padding: 5rpx 20rpx;
  width: 100%;
  margin-bottom: 40rpx;
}
.remark{
  width: 90%;
  padding: 20rpx;
  color: #a9a9a9;
  font-size: 94%;
}
.btn {
  text-align: center;
  border-radius: 30rpx;
  border: 2rpx solid #a9a9a9;
  color: #a9a9a9;
  background-color: #f3f3f3;
  width: 65%;
  margin: 40rpx auto;
  margin-bottom: 10rpx;
  font-size: 90%;
}
.report{
  width: 100%;
  margin: 20rpx auto;
  margin-top: 0rpx;
  padding-bottom: 30rpx;
}

checkbox-group{
  margin-left: 30rpx;
  margin-top: 40rpx;
}
.tab-box {
  margin: 0rpx;
}
.gridTab{
  width: 92%;
  text-align: center;
  margin: 5rpx auto;
}
.mini-tab-header {
  text-align: left;
  margin: 1rpx;
  width: 62%;
  background-color: #f3f3f3;
  color: #20492e;
  font-size: 90%;
}
.mini-tab-info {
  overflow-wrap:break-word;
  word-break: break-all;
  text-align: right;
}

.progress_box{
  position: relative;
  width:40vw;
  height: 40vw;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #eeeeee;
  margin-bottom: 10rpx;
}

.progress_bg{
  position: absolute;
  width:40vw;
  height: 40vw;
  background-color: #4cb16f;
}
.progress_canvas{
  width:40vw;
  height: 40vw;
}

.central_text{
  position: absolute;
  display: list-item;
  line-height: 70%;
  align-items: center;
  justify-content: center;
  overflow-y: hidden;
  text-align: center;
}
.progress_info{
  font-size: 80%;
  line-height: 0.8rem;
  display: block;
}
.ratio_info{
  font-size:160%;
}

.page{
  background-color: #f3f3f3;
  overflow-x: hidden;
}

.flex-row {
  display: flex;
  flex-direction: row;
  width: 88%;
  text-align: center;
  margin: 0 auto;
}
.add-button {
  margin:40rpx auto;
  padding: 5rpx;
  line-height: 140%;
  width:45%;
  color: #4cb16f;
  text-align: center;
  border: 6rpx solid #4cb16f;
  border-radius: 50rpx;
}

.container {
  background-color: #4cb16f;
  padding: 5rpx 40rpx 20rpx 40rpx;
  color: #f3f3f3;
}

.common_info {
  color: #a9a9a9;
  font-size: 90%;
}
.common-img {
  width: 150rpx;
  height: 150rpx;
}
.center {
  text-align: center;
  margin: 10rpx auto;
}
