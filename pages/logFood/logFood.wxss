.tab-header{
  height: 110rpx;
}
.dateBox{
width: 100%;
text-align: center;
vertical-align: center;
padding: 10rpx;
padding-top: 0rpx;
font-size: 36rpx;
margin-top: -5rpx;
background-color:#4cb16f;
color: #ffffff; 
}

.box1{
display: flex;
flex-wrap: wrap;
margin: 0 auto;
}

.box1>view{
text-align: center;
font-size: 34rpx;
margin-top: 15rpx;
}

.dateOn{
border-radius: 50%;
background-color: #fe6345;
color: #ffffff;
}
.ball {
box-shadow:2px 2px 10px #a9a9a9;
border-radius: 20px;
position: absolute;
}
.font-color{
color:#a9a9a9;
}

.break-line{
  border-top: 1rpx solid #cecece;
  width: 80%;
  margin: 20rpx auto;
}

.meal-type-img {
  width: 50rpx;
  height: 50rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
}
.mealtime-header {
  margin-left: 20rpx;
}

.heading-block{
  width: 90%;
  padding: 10rpx 20rpx 5rpx 30rpx;
  font-size: 105%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
}
.flex-column {
  display:flex;
  flex-direction: column;
  margin: 10rpx auto;
}
.food-list{
  width: 78%;
  line-height: 150%;
  font-size: 90%;
  text-align: left;
  margin: 0 auto;
  color: #a9a9a9;
}
.control{
  padding: 2rpx;
  color: #a9a9a9;
  padding-left: 63%;
}

.bottom-control {
  text-align: left;
  margin: 10rpx auto;
  padding: 5rpx 20rpx;
  width: 100%;
  margin-bottom: 40rpx;
}
.remark{
  width: 90%;
  padding: 20rpx;
  color: #a9a9a9;
  font-size: 94%;
}
.btn {
  text-align: center;
  border-radius: 30rpx;
  color: #ffffff;
  background-color: #4cb16f;
  width: 65%;
  padding: 2rpx;
  margin: 40rpx auto;
  margin-bottom: 10rpx;
}
.report{
  width: 100%;
  margin: 20rpx auto;
  margin-top: 0rpx;
  padding-bottom: 30rpx;
}

checkbox-group{
  margin-left: 30rpx;
  margin-top: 40rpx;
}
.tab-box {
  margin: 0rpx;
}
.gridTab{
  width: 92%;
  text-align: center;
  margin: 5rpx auto;
}
.mini-tab-header {
  text-align: left;
  margin: 1rpx;
  width: 72%;
  background-color: #f3f3f3;
  color: #20492e;
  font-size: 90%;
}
.mini-tab-info {
  overflow-wrap:break-word;
  word-break: break-all;
  text-align: right;
}
