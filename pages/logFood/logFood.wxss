.box1 .dateBox{
width: 100%;
text-align: center;
vertical-align: center;
margin-top: 30rpx;
padding: 5rpx;
font-size: 36rpx;
background-color:#4cb16f;
color: #ffffff; 
border-radius: 50rpx;

}

.box1{
display: flex;
flex-wrap: wrap;
margin: 0 auto;
}

.box1>view{
text-align: center;
font-size: 34rpx;
margin-top: 15rpx;
}

.dateOn{
border-radius: 50%;
background-color: #fe6345;
color: #fff;
}
.ball {
box-shadow:2px 2px 10px #AAA;
border-radius: 20px;
position: absolute;
}
.font-color{
color:#a9a9a9;
}

.break-line{
  border-top: 1rpx solid #cecece;
  width: 80%;
  margin: 20rpx auto;
}


.meal-type-img {
  width: 50rpx;
  height: 50rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
  margin: 0 auto;
}
.recipe_article{
  width: 100%;
}
.recipe_article>view{
  padding:15rpx 20rpx;
  box-sizing: border-box;
}
.recipe_article>view>view{
  min-height:185rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  /* justify-content: space-between; */
  color: #000000;
  align-items: center;
}
.recipe1_article1>view>view{
  color: #000000;
}
.recipe1_article2>view>view{
  color: #000000;
}
.recipe_article>view>view>view:nth-of-type(2){
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}
.recipe1_article1>view>view>view:nth-of-type(2){
  color:#000000;
}
.recipe_article>view>view>view:nth-of-type(2)>text:nth-of-type(1){
  font-size:38rpx;
  margin-bottom: 30rpx;
}
.control{
  margin-left:30rpx;
}
.control navigator{
  width:150rpx;
  height:65rpx;
  line-height:55rpx;
  background-color: #4cb16f;
  text-align: center;
  border-radius: 6rpx;
  color: #fff;
  margin: 2rpx;
}