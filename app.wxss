/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.question-container {
  color: #3d4966;
  background-color: white;
  padding-top:20rpx;
  padding-bottom: 5rpx;
  margin: 20rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  text-align: center;
  box-shadow: 0rpx 1rpx 3rpx #3d4966;
} 

/* Big logo for Question pages */
.big-logo {
  width: 400rpx;
}
.big-logo-view {
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}

/* Question header for Question pages */
.question-header-view {
  margin: 10rpx;
  width:75%;
  text-align: center;
  border-top:1px solid #3d4966;
  border-bottom:1px solid #3d4966;
  padding:20rpx;
}
.question-header {
  font-style: bold;
  font-size: 45rpx;
  text-align: center;  
}

/* Next button for Question pages */
.nextButtonView {
    margin-bottom: 40rpx;
    color: #3d4966;
    text-align: center;
}
.nextQuestionButton {
    color: #3d4966;
    border: 1rpx solid #3d4966;
    font-size: 40rpx;
    border-radius: 10rpx;
}
.nextQuestionButton:hover{
    border: 5rpx solid #3d4966;
}
