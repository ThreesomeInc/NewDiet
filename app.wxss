/**app.wxss**/
@import "template/pageHeader.wxss";
@import "vendor/wxParse/wxParse.wxss";
@import 'vendor/weui/weui.wxss';

.center {
  text-align: center;
}
.left{
  text-align: left;
}
.bold {
  font-weight: bold;
}
.orange {
  color: #fb8b05;
}
.brown {
  color:#9c3d1f;
}
.ping {
  color: #fe6345;
}
.red {
  color: #dbd7d6;
}

.green {
  color: #4cb16f;
}
.dark-green {
  color: #20492e;
}

.main-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin:0rpx;
} 
page{
  background-color: rgba(0, 0, 0, 0.05);
}

.question-container {
  color: #20492e;
  background-color: white;
  padding-top:30rpx;
  padding-bottom: 5rpx;
  margin: 20rpx 40rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  text-align: center;
  border: 10rpx solid #4cb16f;
  border-radius: 30rpx;
} 

/* Big logo for Question pages */
.big-logo {
  width: 350rpx;
}
.big-logo-view {
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}

/* Question header for Question pages */
.question-header-view {
  margin: 10rpx;
  width:80%;
  text-align: center;
  border-top:1px solid #20492e;
  border-bottom:1px solid #20492e;
  padding:20rpx;
}
.question-header {
  font-weight: bold;
  font-size: 45rpx;
  text-align: center;  
}

/* Picker Question Page */
.data-picker-view {
    margin: 0rpx auto;
    width:80%;
    text-align: center;
    vertical-align: middle;
    padding-bottom: 60rpx;

}
picker-view {
  height: 400rpx;
  text-align: center;
  vertical-align: middle;
}
picker-view-column {
  line-height: 70rpx;
}

/* Next button for Question pages */
.nextButtonView {
    color: white;
    text-align: center;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}
.nextQuestionButton {
    color: white;
    border: 1rpx solid white;
    font-size: 40rpx;
    background-color: #4cb16f;
}
.nextQuestionButton:hover{
    border: 5rpx solid white;
}




