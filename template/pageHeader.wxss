  border: 2rpx solid white;
  padding: 10rpx;
  margin:0 auto;
  border-radius: 50rpx;
  font-size: 40rpx;
  width: 60%;
}

.subHeader {
  font-size: 35rpx;
  margin-top: 15rpx;
}